<% if obj.errors.any? %>
  <div id="error_explanation">
    <h2>Обнаружены <%= obj.errors.count %> <%= Russian.p(obj.errors.count, 'ошибка', 'ошибки', 'ошибок') %></h2>
    <ul>
      <% obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>